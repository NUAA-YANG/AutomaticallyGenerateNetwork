<Information>
    <type>router</type><!--描述为路由器router或者主机host-->
    <lxd_name>QR3</lxd_name>
    <interfaces><!--描述接口信息-->
        <interface><!--描述详细接口信息-->
            <name>eth1</name>
            <ipAddress>192.168.82.2</ipAddress>
            <subnetMask>24</subnetMask>
        </interface>
        <interface><!--描述详细接口信息-->
            <name>eth2</name>
            <ipAddress>192.168.84.2</ipAddress>
            <subnetMask>24</subnetMask>
        </interface>
        <interface><!--描述详细接口信息-->
            <name>eth3</name>
            <ipAddress>192.168.85.1</ipAddress>
            <subnetMask>24</subnetMask>
        </interface>
    </interfaces>
    <protocol><!--描述协议信息-->
        <ospf>
            <ospf_network><!--ospf的邻接点-->
                <ip>192.168.85.0/24</ip>
            </ospf_network>
            <ospf_redistribute>bgp</ospf_redistribute><!--重转发网络协议-->
        </ospf>
        <bgp>
            <ans>300</ans><!--bgp自治域-->
            <internal><!--bgp的入口流量-->
                <ip>192.168.85.2</ip>
            </internal>
            <external><!--bgp的出口流量-->
                <ip>192.168.82.1</ip>
                <ip>192.168.84.1</ip>
            </external>
            <bgp_network><!--bgp的邻接点-->
                <ip>192.168.82.0/24</ip>
                <ip>192.168.84.0/24</ip>
                <ip>192.168.85.0/24</ip>
            </bgp_network>
            <bgp_redistribute>ospf</bgp_redistribute><!--重转发网络协议-->
        </bgp>
    </protocol>
</Information>