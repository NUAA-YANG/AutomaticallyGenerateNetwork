<?xml version="1.0" encoding="utf-8"?>
<Information>
    <type>router</type><!--描述为路由器router或者主机host-->
    <lxd_name>QR1</lxd_name>
    <interfaces><!--描述接口信息-->
        <interface><!--描述详细接口信息-->
            <name>eth1</name>
            <ipAddress>192.168.80.2</ipAddress>
            <subnetMask>24</subnetMask>
        </interface>
        <interface>
            <name>eth2</name>
            <ip_address>192.168.81.1</ip_address>
            <subnet_mask>24</subnet_mask>
        </interface>
        <interface>
            <name>eth3</name>
            <ip_address>192.168.83.1</ip_address>
            <subnet_mask>24</subnet_mask>
        </interface>
    </interfaces>
    <protocol><!--描述协议信息-->
        <ospf>
            <ospf_network><!--ospf的邻接点-->
                <ip>192.168.80.0/24</ip>
                <ip>192.168.80.1/24</ip>
            </ospf_network>
        </ospf>
        <bgp>
            <ans>100</ans><!--bgp自治域-->
            <internal><!--bgp的入口流量-->
                <ip>192.168.80.1</ip>
            </internal>
            <external><!--bgp的出口流量-->
                <ip>192.168.81.2</ip>
                <ip>192.168.83.2</ip>
            </external>
            <bgp_network><!--bgp的邻接点-->
                <ip>192.168.81.1/24</ip>
                <ip>192.168.83.1/24</ip>
            </bgp_network>
            <redistribute>ospf</redistribute><!--重转发网络协议-->
        </bgp>
    </protocol>
</Information>